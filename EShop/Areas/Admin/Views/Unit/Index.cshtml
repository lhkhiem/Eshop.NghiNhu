@{
    ViewBag.Title = "Unit - Danh sách";
    ViewBag.Menu = "unit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@section css{
    <link rel="stylesheet" href="/Contents/Admin/assets/bundles/datatables/datatables.min.css">
    <link rel="stylesheet" href="/Contents/Admin/assets/bundles/datatables/DataTables-1.10.16/css/dataTables.bootstrap4.min.css">
    <style type="text/css">
        .table td, .table th {
            padding: .5rem;
        }
    </style>
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Danh sách đơn vị</h4>
            </div>
            <div class="card-body">
                <div>
                    <button class="btn btn-primary">Add</button>
                    <button class="btn btn-success">Edit</button>
                    <button class="btn btn-danger">Delete</button>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="unitTable" style="width:100%;">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên đơn vị</th>
                            </tr>
                        </thead>
                        <tbody id="unitTableBody"></tbody>
                    </table>
                    <script id="data-template" type="x-tmpl-mustache">
                        <tr id="{{ID}}">
                            <td>{{STT}}</td>
                            <td>{{Name}}</td>
                        </tr>
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
@section js{

    <script src="~/Contents/Admin/js/controller/unit-index.js"></script>
    <script src="~/Contents/Admin/js/mustache.min.js"></script>
    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <script src="/Contents/Admin/assets/bundles/datatables/datatables.min.js"></script>
    <script src="/Contents/Admin/assets/bundles/datatables/DataTables-1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Contents/Admin/assets/bundles/datatables/export-tables/dataTables.buttons.min.js"></script>
    <script src="/Contents/Admin/assets/bundles/datatables/export-tables/buttons.flash.min.js"></script>
    <script src="/Contents/Admin/assets/bundles/datatables/export-tables/jszip.min.js"></script>
    <script src="/Contents/Admin/assets/bundles/datatables/export-tables/pdfmake.min.js"></script>
    <script src="/Contents/Admin/assets/bundles/datatables/export-tables/vfs_fonts.js"></script>
    <script src="/Contents/Admin/assets/bundles/datatables/export-tables/buttons.print.min.js"></script>
    <script src="/Contents/Admin/assets/js/page/datatables.js"></script>

    <script type="text/javascript">
        
    </script>
}